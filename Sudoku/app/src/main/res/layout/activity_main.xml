<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.scottlindley.sudoku.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="328dp">

        <GridLayout
            android:id="@+id/bord_layout"
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:rowCount="9"
            android:columnCount="9"/>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_centerInParent="true">

            <GridLayout
                android:id="@+id/box0"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="0"
                android:layout_row="0"/>
            <GridLayout
                android:id="@+id/box1"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="1"
                android:layout_row="0"/>
            <GridLayout
                android:id="@+id/box2"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
               android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="2"
                android:layout_row="0"/>
            <GridLayout
                android:id="@+id/box3"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="0"
                android:layout_row="1"/>
            <GridLayout
                android:id="@+id/box4"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="1"
                android:layout_row="1"/>
            <GridLayout
                android:id="@+id/box5"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="2"
                android:layout_row="1"/>
            <GridLayout
                android:id="@+id/box6"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="0"
                android:layout_row="2"/>
            <GridLayout
                android:id="@+id/box7"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="1"
                android:layout_row="2"/>
            <GridLayout
                android:id="@+id/box8"
                android:layout_width="109.33dp"
                android:layout_height="109.33dp"
                android:background="@drawable/border"
                android:rowCount="3"
                android:columnCount="3"
                android:layout_column="2"
                android:layout_row="2"/>
        </GridLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/solve_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Solve"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/selection_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:text="2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:gravity="center"
        android:weightSum="9"
        android:layout_above="@id/solve_button">

        <TextView
            android:id="@+id/select_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="2"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="4"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="5"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="6"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="7"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="8"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/select_9"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="9"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background = "#e86100"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
